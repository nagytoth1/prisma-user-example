FROM node:20-alpine3.19 AS builder

WORKDIR /opt/app

COPY package.json .

RUN npm i --omit dev

COPY . .

RUN npm run build

FROM nginx:alpine

COPY --from=builder /opt/app/dist /usr/share/nginx/html
COPY ./nginx-conf/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD [ "nginx", "-g", "daemon off;" ]